<div class="flex justify-center h-screen m-2">
  <div class="w-full p-6 m-auto bg-white rounded-md shadow-md ring-2 ring-gray-800/50 lg:max-w-lg">
    <h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">投稿</h2>
    <%= form_with model: post, class: "space-y-4" do |f| %>
      <%# Error messages and flash messages (optional, if needed) %>
      <%= render "layouts/flash_message" %>
      
      <%# Text area input field for the post body %>
      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :body, "投稿内容" %></span>
        </label>
        <%= f.text_area :body, class: "w-full textarea textarea-bordered textarea-lg", rows: 10 %>
      </div>
      
      <%# Submit button %>
      <div>
        <%= f.submit "投稿", class: "btn-neutral btn btn-block" %>
      </div>
    <% end %>
  </div>
</div>
