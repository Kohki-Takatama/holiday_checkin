<div class="flex justify-center h-screen m-2">
  <div class="w-full p-6 m-auto bg-white rounded-md shadow-md ring-2 ring-gray-800/50 lg:max-w-lg">
    <div class="relative">
      <h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">
        <%= title %>
      </h2>
      <span class="absolute right-0 bottom-0 text-base text-gray-500">
        <% if post.created_at.present? %>
          <%= post.created_at.strftime("%m/%d") %>
        <% end %>
      </span>
    </div>
    <%= form_with model: post, class: "space-y-4" do |f| %>
      <%# Error messages and flash messages (optional, if needed) %>
      <%= render "layouts/flash_message" %>
      
      <%# Text area input field for the post body %>
      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :body, "宣言内容" %></span>
        </label>
        <%= f.text_area :body, class: "w-full textarea textarea-bordered textarea-lg", rows: 10 %>
      </div>
      
      <%# Submit button %>
      <div>
        <%= f.submit "宣言！", class: "btn-neutral btn btn-block" %>
      </div>
    <% end %>
  </div>
</div>
