
<div class="flex justify-center h-screen">
    <div class="w-full p-6 m-auto bg-white rounded-md shadow-md ring-2 ring-gray-800/50 lg:max-w-lg">
      <h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= render "layouts/flash_message" %>
          
          <div>
            <label class="label">
              <span class="text-base label-text"><%= f.label :email %></span>
            </label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full input input-bordered" %>
          </div>

          <div>
            <label class="label">
              <span class="text-base label-text"><%= f.label :password %></span>
            </label>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full input input-bordered" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center space-x-2">
              <%= f.check_box :remember_me, class: "checkbox" %>
              <%= f.label :remember_me, class: "text-base label-text" %>
            </div>
          <% end %>

          <div class="text-xs text-gray-600 hover:underline hover:text-blue-600">
            <%= link_to "Forget Password?", new_password_path(resource_name) %>
          </div>

          <div>
            <%= f.submit "ログイン", class: "btn-neutral btn btn-block" %>
          </div>
        <% end %>

        <div class="mt-4">
          <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
