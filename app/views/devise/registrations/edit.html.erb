<div class="flex justify-center h-screen">
  <div class="w-full p-6 m-auto bg-white rounded-md shadow-md ring-2 ring-gray-800/50 lg:max-w-lg pb-10">
    <h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">設定</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%# Name input field %>
      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :name %></span>
        </label>
        <%= f.text_field :name, class: "w-full input input-bordered" %>
      </div>

      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :email %></span>
        </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full input input-bordered" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-600">
          現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :password %> <i>(変更しない場合は空のまま)</i></span>
        </label>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full input input-bordered" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-600"><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :password_confirmation %></span>
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full input input-bordered" %>
      </div>

      <div>
        <label class="label">
          <span class="text-base label-text"><%= f.label :current_password %> <i>(変更するには現在のパスワードを入力してください)</i></span>
        </label>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full input input-bordered" %>
      </div>

      <div>
        <%= f.submit "更新", class: "btn-neutral btn btn-block" %>
      </div>
    <% end %>

    <details class="mt-8 pl-1">
      <summary class="cursor-pointer text-sm text-red-600">アカウント削除</summary>
      <div class="mt-2">
        <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除します。よろしいですか？", turbo_confirm: "アカウントを削除します。よろしいですか？" }, method: :delete, class: "btn btn-error btn-block" %>
      </div>
    </details>

  </div>
</div>
